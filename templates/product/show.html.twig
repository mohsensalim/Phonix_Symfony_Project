                                        {% else %}

                                        <div class="alert alert-info">
                                        
                                        No ProductFound !
                                        </div>

                                        {% endif %}

                                    </div>

       
        
                

                
                              <div class="position-fixed top-50 translate-middle-y  p-3 col-md-5 " style=" right: 10px; height:430px">
                                    <div class="card  ">
                                        <div class="card-body col-md-6">
                                        <p class="card-title text text-break">{{ product.description }}</p></div>

                                        <h5 class="card-title">{{ product.name }}</h5>
                                                        
                                                        <h5><sapn class="text text-danger">{{ product.price }} DH</sapn></h5>
                                                    <h5><sapn class="text text-success">{{ product.category.name }}</sapn></h5>
                                                    <a href="{{ path('store_order',{product: product.id}) }}" class="btn btn-sm btn-outline-dark mx-1">Buy Now </a>
                                        </div>
