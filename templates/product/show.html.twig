{% block title %}{{ product.name }}{% endblock %}

{% block body %}

    <div class="row my-5">
        
                    
                        
                            {% if product %}
                                    
                                
                                
                                <div class="col-md-6 ">
                                
                                    <div class="card">

                                        {% if product.image %}
                                        <img src="{{asset('uploads/'~ product.image)}}" alt="product.image"
                                        class="card-img-top" >
                                
                                        {% else %}
                                        <img src="{{asset('images/none.jpg')}}" alt="product.image"
                                        class="card-img-top img-fluid" >
                                        {% endif %}
                                        
                                        
                                            {# <h5 class="card-title">{{ product.name }}</h5>
                                            
                                            <h5><sapn class="text text-danger">{{ product.price }} DH</sapn></h5>
                                        <h5><sapn class="text text-success">{{ product.category.name }}</sapn></h5>
